{
  "compilerOptions": {
    "target": "ES6",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strict": false,
    "pretty": true,
    "outDir": "./build",
    "sourceMap": true,
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "types": ["jest", "node"]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./electron/**/*",
    "./electron/**/*.json",
    "__tests__/jest.config.ts",
    "./settings.json"
  ]
}